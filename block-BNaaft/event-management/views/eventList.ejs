<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event List</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <% include partials/header.ejs %>
  <div class="title">
    <h1>Event List</h1>
  </div>
  <a href="/" class="btn-black back">â¬… Go Back</a>
  <a href="/events/new" class="btn-green btn-add-2">Add Event</a>
    <div class="container-90 flex justify-between">
      <section class="flex-68">
        <ul class="eventlist">
          <% events.forEach(function(event) { %>
          <li>
            <div class="event-card">
              <h3 class="event-title"><%= event.title %></h3>
              <p class="event-details">Hosted by: <%= event.host %></p>
              <p class="event-details">Date: <%= event.start_date %> to <%= event.end_date %></p>
              <p class="event-likes">Likes: <%= event.likes %></p>
              <a href="/events/<%= event._id %>" class="btn-green">Event Details</a>
            </div>
          </li>
          <% }) %>
        </ul>
      </section>
      <aside class="sidebar flex-24">
        <h3>Categories:</h3>
        <% allCategories.forEach(function(category) { %>
          <a href="/events?category=<%= category %>" class="btn-black"><%= category %></a>
        <% }) %>
      </aside>
    </div>
    <% include partials/footer.ejs %>
  </body>
</html>
